extends ../layouts/common
block content
  h1 Login

  if errors
    each error in errors 
      .alert.alert-danger= error
      
  form(action="/auth/login", method="POST")
    .form-group
      label(for="email") Email
      input(id="email", class="form-control", name="email", type="email", placeholder="Input email", value=values ? values.email: "")
      //- , value=values ? values.email: ""
    .form-group
      label(for="password") Password
      input(id="password", class="form-control", name="password", type="password", placeholder="Input password")
    
    button.btn.btn-primary.ml-2 Login